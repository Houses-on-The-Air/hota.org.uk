CREATE DATABASE adif_db;

USE adif_db;

CREATE TABLE adif_records (
    id INT AUTO_INCREMENT PRIMARY KEY,
    call VARCHAR(50) NOT NULL,
    band VARCHAR(10),
    mode VARCHAR(10),
    freq DECIMAL(10, 5),
    qso_date DATE,
    time_on TIME,
    time_off TIME,
    rst_sent VARCHAR(10),
    rst_rcvd VARCHAR(10),
    qsl_sent CHAR(1),
    qsl_rcvd CHAR(1),
    qsl_sent_date DATE,
    qsl_rcvd_date DATE,
    qsl_via VARCHAR(10),
    gridsquare VARCHAR(10),
    my_gridsquare VARCHAR(10),
    operator VARCHAR(50),
    station_callsign VARCHAR(50),
    my_rig TEXT,
    my_antenna TEXT,
    power DECIMAL(5, 1),
    comment TEXT,
    dxcc INT,
    country VARCHAR(100),
    cq_zone INT,
    itu_zone INT,
    cont VARCHAR(2),
    distance DECIMAL(10, 2),
    age INT,
    email VARCHAR(100),
    name VARCHAR(100),
    address TEXT,
    city VARCHAR(100),
    state VARCHAR(100),
    postal_code VARCHAR(20),
    lat DECIMAL(10, 6),
    lon DECIMAL(10, 6),
    sota_ref VARCHAR(20),
    iota VARCHAR(10),
    iota_island_id INT,
    usaca_counties VARCHAR(100),
    ten_ten INT,
    sig VARCHAR(50),
    sig_info VARCHAR(50),
    a_index INT,
    ant_az DECIMAL(5, 1),
    ant_el DECIMAL(5, 1),
    ant_path VARCHAR(10),
    arrl_sect VARCHAR(10),
    award_submitted VARCHAR(10),
    award_granted VARCHAR(10),
    cnty VARCHAR(20),
    dxcc_prefix VARCHAR(10),
    eq_call VARCHAR(50),
    eqsl_qslrdate DATE,
    eqsl_qslsdate DATE,
    force_init VARCHAR(10),
    guest_op VARCHAR(50),
    hrdlog_qslrdate DATE,
    hrdlog_qslsdate DATE,
    k_index INT,
    max_bursts VARCHAR(10),
    ms_shower VARCHAR(50),
    nr_bursts VARCHAR(10),
    pfx VARCHAR(10),
    prop_mode VARCHAR(10),
    qrzcom_qslrdate DATE,
    qrzcom_qslsdate DATE,
    rig VARCHAR(50),
    rx_pwr DECIMAL(5, 1),
    sat_mode VARCHAR(10),
    sat_name VARCHAR(10),
    sfi INT,
    sig_intl VARCHAR(50),
    skcc VARCHAR(10),
    swl VARCHAR(10),
    tx_pwr DECIMAL(5, 1),
    web VARCHAR(100)
);
